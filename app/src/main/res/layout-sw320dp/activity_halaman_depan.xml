<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ayyash.recfon.HalamanDepan"
    android:background="#fff">






        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@drawable/headerss"
           >


        </FrameLayout>


    <customsfonts.MyTextView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textColor="#fff"
        android:textSize="34dp"
        android:gravity="center"
        android:layout_marginTop="110dp"


        />



    <ImageView
        android:layout_gravity="center"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/logo_bulat"
       android:layout_marginTop="230dp"
        android:layout_centerHorizontal="true"
        />



    <LinearLayout

        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="140dp"
        >







    </LinearLayout>








    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingBottom="50dp">


        <customsfonts.MyTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Get connected with"
            android:lines="1"
            android:textColor="@color/colorhint"
            android:gravity="center"

            />

        <customsfonts.MyTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="the best creative network"
            android:gravity="center"
            android:lines="2"
            android:paddingBottom="21dp"
            android:textColor="@color/colorhint"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:id="@+id/signin"
                android:theme="@style/PrimaryButton"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daftar"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:id="@+id/Signup"
                android:theme="@style/PrimaryButton"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>



