<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ayyash.recfon.SarapanActivity"
    android:weightSum="1">

    <TextView
        android:text="Rekam Makan Malam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="24sp"
        android:textColor="@android:color/holo_green_dark" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20px" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/clock"
        android:id="@+id/imageView" />

    <android.support.v7.widget.CardView
        android:padding="20dp"
        android:id="@+id/bgSpiner"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.ayyash.recfon.makanmalam.SearchableSpinnerMM
        android:id="@+id/spinner"
        android:layout_height="wrap_content"
        android:entries="@array/colleges"
        app:hintText="Tambahkan makan/minum disini :"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent" />

    </android.support.v7.widget.CardView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:text="Data hari ini:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtTanggal"
        android:textColor="@android:color/holo_green_dark" />

    <TextView
        android:layout_marginTop="100dp"
        android:visibility="gone"

        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Anda Tidak Makan Malam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView9" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_weight="1">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_item">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</LinearLayout>
