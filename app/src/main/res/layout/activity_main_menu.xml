<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ayyash.MainMenu">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Food Record :"
        app:titleTextColor="#fff"
        android:layout_marginTop="0dp"
        android:background="?attr/colorPrimary">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:layout_margin="10dp"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:id="@+id/btnsarapanpagi"
            android:background="@drawable/sarapanpagis" />

        <Button
            android:layout_margin="10dp"
            android:id="@+id/selinganPagi"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:background="@drawable/selinganpagis" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_margin="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/makanSiang"
            android:background="@drawable/msiang" />

        <Button
            android:layout_margin="10dp"
            android:layout_height="150dp"
            android:id="@+id/seliSiang"
            android:layout_width="150dp"
            android:background="@drawable/selingansiang" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_margin="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/makanMalam"
            android:background="@drawable/mmalam" />

        <Button
            android:layout_margin="10dp"
            android:layout_height="150dp"
            android:id="@+id/selinganMala"
            android:layout_width="150dp"
            android:background="@drawable/selinganmalam" />
    </LinearLayout>


</LinearLayout>
