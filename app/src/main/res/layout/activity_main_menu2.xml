<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ayyash.recfon.MenuFoodsRecord">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Menu Utama"
        app:titleTextColor="#fff"
        android:layout_marginTop="0dp"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Light"/>

    <ScrollView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

                <Button
                    android:text="Status Gizi"
                    android:layout_margin="10dp"
                    android:layout_height="150dp"
                    android:layout_width="150dp"
                    android:id="@+id/btnsarapanpagi"
                     />

                <Button
                    android:layout_margin="10dp"
                    android:id="@+id/selinganPagi"
                    android:layout_height="150dp"
                    android:layout_width="150dp"
                    android:text="Makan Harian" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_margin="10dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/makanSiang"
                    android:text="Aktifitas" />

                <Button
                    android:layout_margin="10dp"
                    android:layout_height="150dp"
                    android:id="@+id/seliSiang"
                    android:layout_width="150dp"
                    android:text="Frekuensi Makan Bulanan" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_margin="10dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/makanMalam"
                    android:text="Profile" />

                <Button
                    android:layout_margin="10dp"
                    android:layout_height="150dp"
                    android:id="@+id/selinganMala"
                    android:layout_width="150dp"
                    android:text="Logout" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <Button
                    android:layout_margin="10dp"
                    android:layout_width="293dp"
                    android:layout_height="wrap_content"
                    android:text="Perbandingan Asupan Makan"
                    android:theme="@style/PrimaryButton"
                    android:id="@+id/btnAsupan"
                    android:layout_weight="0.37" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
