<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_perhitungan_fr"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ayyash.recfon.PerhitunganPagi">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageViewUye" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ulala"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:gravity="center"
                    android:textSize="24sp" />

                <TextView
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="Pilih 1 jenis makanan yang paling sering anda makan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tJenisMakan" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:id="@+id/rgJenisMakanan"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:text="RadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:id="@+id/rm1" />

                    <RadioButton
                        android:text="RadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rm2" />
                    <RadioButton
                        android:visibility="gone"
                        android:text="RadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rm3" />

                    <RadioButton
                        android:visibility="gone"
                        android:text="RadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rm4" />
                    <RadioButton
                        android:visibility="gone"
                        android:text="RadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rm5" />
                    <RadioButton
                        android:visibility="gone"
                        android:text="RadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rm6" />
                    <RadioButton
                        android:visibility="gone"
                        android:text="RadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rm7" />

                </RadioGroup>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1" />

                <TextView
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="Ukuran porsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView19" />

                <RadioGroup

                    android:layout_width="match_parent"
                    android:id="@+id/rg"
                    android:layout_height="wrap_content">

                    <RadioButton


                        android:text="RadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:id="@+id/radioButton" />

                    <RadioButton

                        android:text="RadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton2" />
                    <RadioButton
                        android:visibility="gone"
                        android:text="RadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton3" />

                    <RadioButton
                        android:visibility="gone"
                        android:text="RadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton4" />
                    <RadioButton
                        android:visibility="gone"
                        android:text="RadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton5" />
                    <RadioButton
                        android:visibility="gone"
                        android:text="RadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton6" />
                    <RadioButton
                        android:visibility="gone"
                        android:text="RadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton7" />

                </RadioGroup>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:text="Jumlah Porsi Sekali Maakan "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sfas" />
                <TextView
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2" />
                    </LinearLayout>




                    <SeekBar
                        android:progress="2"
                        android:max="20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/seekBar"
                        android:layout_weight="2" />





                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Frekuensi Konsumsi dalam 1 bulan terakhir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtFrekuensi1" />
                    <TextView
                        android:text=""
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/jmlFrekuensi" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName|numberSigned"
                        android:text="00"
                        android:ems="10"
                        android:id="@+id/txtFrekuensiUye"
                        android:layout_weight="1"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/frekuensi"
                    app:hintText="Pilih Satuan Frekuensi"
                    android:id="@+id/spinner2"
                    android:layout_weight="1" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1" />




                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:text="Tambahkan"
                        android:layout_width="141dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/hitung"

                        android:background="@android:color/holo_green_light"
                        android:layout_weight="0.55" />

                    <Button
                        android:text="Batal"
                        android:layout_width="141dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/batal"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.38"
                        android:background="@android:color/holo_red_light" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
