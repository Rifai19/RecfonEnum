<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ayyash.recfonenum.MenuFoodsRecord">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Menu Enumerator"
        app:titleTextColor="#fff"
        android:layout_marginTop="0dp"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Light"/>

    <ScrollView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

                <Button
                    android:layout_margin="10dp"
                    android:layout_height="250dp"
                    android:layout_width="250dp"
                    android:id="@+id/btnsarapanpagi"
                    android:background="@drawable/btn_statusg" />

                <Button
                    android:layout_margin="10dp"
                    android:id="@+id/selinganPagi"
                    android:layout_height="250dp"
                    android:layout_width="250dp"
                    android:background="@drawable/btn_dua" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_margin="10dp"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:id="@+id/makanSiang"
                    android:background="@drawable/btn_tiga" />

                <Button
                    android:layout_margin="10dp"
                    android:layout_height="250dp"
                    android:id="@+id/seliSiang"
                    android:layout_width="250dp"
                    android:background="@drawable/btn_empat" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_margin="10dp"
                    android:layout_height="250dp"
                    android:background="@drawable/btn_lima"
                    android:id="@+id/blmSelesai"
                    android:layout_width="250dp" />

                <Button
                    android:layout_margin="10dp"
                    android:layout_height="250dp"
                    android:background="@drawable/btn_enam"
                    android:id="@+id/sudahSelesai"
                    android:layout_width="250dp" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
